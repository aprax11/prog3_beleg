<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.Controller">
    <left>
        <ListView fx:id="kuchenListView" prefHeight="400.0" prefWidth="247.0">

        </ListView>
    </left>
   <center>
       <GridPane alignment="center" hgap="10" vgap="10">

           <TextField fx:id="positionField" onKeyReleased="#handleKeyReleased" prefHeight="25.0" prefWidth="50.0" GridPane.rowIndex="2" GridPane.columnIndex="0" />
           <Button fx:id="löschenButton" mnemonicParsing="false" onAction="#onButtonClicked" text="Position löschen" BorderPane.alignment="CENTER" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
           <Button fx:id="einfügeButton" mnemonicParsing="false" onAction="#onButtonClicked" text="Kuchen adden" BorderPane.alignment="CENTER" GridPane.rowIndex="1" />
         <columnConstraints>
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
       </GridPane>

   </center>
</BorderPane>
